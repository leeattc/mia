{% set order_id = 71 %}
{% set fulfillment_id = 2945759 %}

{% set order = api.get('/order/' ~ order_id) %}
{% set items = api.get('/orderitem', {query:{'order_id':order_id}}) %}
{% set fulfillment = api.get('/orderfulfillment/' ~ fulfillment_id) %}
{% set product_ids = items|values_in('product_id') %}
{% set products = api.get('/variant',{query:{id:{'$in':product_ids}}})|group_by('id') %}
{% set shipping_method = api.get('/shippingmethod/' ~ order.shipping_method) %}
<table border="0" cellpadding="0" cellspacing="0" width="640" style="color: #555555; font-family: helvetica, arial, sans-serif;">
    <!-- Begin email header -->
    <tr>
        <td>
            {% include 'email/core/header.html.twig' %}
        </td>
    </tr>
    <!-- End email header -->
    <!-- Begin title -->
    <tr>
        <td style="padding:20px; vertical-align:top;">
            <h1 style="color: #333333; font-size: 36px; line-height: 46px;">
                A part of your order is on the way!
            </h1>
        </td>
    </tr>
    <!-- End title -->
    <!-- Begin order info -->
    <tr>
        <td>
            <table border="0" cellpadding="0" cellspacing="0" width="640" style="background-color: #ebebeb; color: #555555; font-family: helvetica, arial, sans-serif; padding: 20px;">
                <tr>
                    <td style="padding-bottom: 10px; vertical-align: top;">
                        <h2 style="color: #E16C25; font-size: 18px; margin: 0; text-transform: uppercase;">
                            Order Info
                        </h2>
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align: top;">
                        <p style="font-size: 14px; line-height: 22px; margin: 0;">
                            Order ID: {{ order.order_number }} <br>
                        </p>
                    </td>
                    <td style="vertical-align: top;">
                        <p style="font-size: 14px; line-height: 22px; margin: 0;">
                            Date: {{ order.date_created }}<br>
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <!-- End order info -->
    <!-- Begin shipping details -->
    <tr>
        <td>
            <table border="0" cellpadding="0" cellspacing="0" width="640" style="color: #555555; font-family: helvetica, arial, sans-serif; padding: 20px;">
                <tr>
                    <td style="border-bottom: 1px solid #CCCCCC; padding-bottom: 10px; vertical-align: top;">
                        <h2 style="font-size: 18px; margin: 0; text-transform: uppercase;">
                            Shipping Details
                        </h2>
                    </td>
                </tr>
                <tr>
                    <td  style="padding-bottom: 0px; padding-top: 10px; vertical-align:top;">
                        <p style="font-size: 14px; line-height: 22px;">
                            This order will be shipped to you at:
                        </p>
                        <p style="font-size: 14px; line-height: 22px; margin: 0;">
                            {{ order.shipping_first_name }} {{ order.shipping_last_name }} <br>
                            {{ order.shipping_street_line1}} {{ order.shipping_street_line2}} <br>
                            {{ order.shipping_city }}, {{ order.shipping_state }} {{ order.shipping_zip }} <br>
                            {{ order.shipping_country }} <br>
                            {{ order.shipping_phone_number }} <br>
                            using {{ shipping_method.name }} <br>
                            
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <!-- End shipping details -->
    <!-- Begin item info -->
    <tr>
        <td>
            <table border="0" cellpadding="0" cellspacing="0" width="640" style="color: #555555; font-family: helvetica, arial, sans-serif; padding: 20px;">
                <tr>
                    <td style="border-bottom: 1px solid #CCCCCC; padding-bottom: 10px; vertical-align: top;">
                        <h2 style="font-size: 18px; margin: 0; text-transform: uppercase;">
                            Item Info
                        </h2>
                    </td>
                </tr>
                {% for item in items %}
                <tr>
                    <td style="border-bottom: 1px solid #cccccc; padding-bottom: 10px; padding-top: 10px; vertical-align: top;">
                        <p style="font-size: 14px; line-height: 22px; margin: 0;">
                            SKU: {{item.sku|default("-")}}<br>
                            Item name: <a href="{{site_url}}{{products[item.product_id].0.url}}" target="_blank">{{ item.name }}</a><br>
                            {% for ffi in fulfillment.items %}
                                {% if ffi.id == item.id %}
                                    Quantity: {{ ffi.quantity }} <br>
                                    Tracking number: {{ ffi.tracking|default("-") }} <br>
                                {% endif %}
                            {% endfor %}
                        </p>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </td>
    </tr>
    <!-- End item info -->
    <!-- Begin thank you -->
    <tr>
        <td style="padding: 20px; vertical-align:top;">
            <p style="font-size: 14px; line-height: 22px;">
                Thank you for shopping with us.
            </p>
        </td>
    </tr>
    <!-- End thank you -->
    <!-- Begin email footer -->
    <tr>
        <td>
            {% include 'email/core/footer.html.twig' %}
        </td>
    </tr>
    <!-- End email footer -->
</table>