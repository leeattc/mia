{% set order = api.get('/order/' ~ order_id) %}
{% set items = api.get('/orderitem', {query:{order_id:order_id}}) %}
{% set product_ids = items|values_in('product_id') %}
{% set products = api.get('/product',{query:{id:{'$in':product_ids}}})|group_by('id') %}
{% set shipping_method = api.get('/shippingmethod/' ~ order.shipping_method) %}
<table border="0" cellpadding="0" cellspacing="0" width="640" style="font-family: helvetica, arial, sans-serif;">
	<!-- Begin email header -->
	<tr>
		<td>
			{% include 'core/header.html.twig' %}
		</td>
	</tr>
	<!-- Begin thank you -->
	<tr>
		<td align="left" style="padding:20px 20px 10px 20px; vertical-align:top;">
			<h1 style="color: #333333; font-size: 36px; line-height: 46px; margin: 0;"><a href="#" style="text-decoration:none; color:#333333;">Thank you for placing your order with {{ app.params['site']['title'] }}!</a></h1>
		</td>
	</tr>
	<tr>
		<td align="left" style="padding:10px 20px 20px 20px; vertical-align:top;">
			<p style="font-size: 14px; line-height: 22px; color:#555555;">This email is to confirm your recent order.</p>
		</td>
	</tr>
	<!-- End thank you -->
	<!-- Begin order info -->
	<tr>
		<td>
			<table border="0" cellpadding="0" cellspacing="0" width="640" style="background-color: #ebebeb; font-family: helvetica, arial, sans-serif; padding: 20px;">
				<tr>
					<td colspan="2" style="padding-bottom: 20px; vertical-align: top;">
						<h2 style="color: #E16C25; font-size: 18px; margin: 0; text-transform: uppercase;">Order Info</h2>
					</td>
				</tr>
				<tr>
					<td style="padding-bottom: 20px; vertical-align: top;">
						<p style="color:#555555; font-size: 14px; line-height: 22px; margin: 0;">
							Order ID: {{ order.order_number }} <br>
							Subtotal: ${{ order.subtotal|number_format(2) }}<br>
							Total: ${{order.total|number_format(2)}}
						</p>
					</td>
					<td style="vertical-align: top;">
						<p style="color:#555555; font-size: 14px; line-height: 22px; margin: 0;">
							Date: {{ order.date_created }}<br>
							Tax: ${{order.tax|number_format(2)}}<br>
							Total: ${{order.total|number_format(2)}}
						</p>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<!-- End order info -->
	<!-- Begin shipping info -->
	<tr>
		<td>
			<table border="0" cellpadding="0" cellspacing="0" width="640" style="font-family: helvetica, arial, sans-serif; padding: 20px;">
				<tr>
					<td  align="left" style="padding-bottom: 0px; vertical-align:top;">
						<h3 style="color:#333333 margin: 0;">This order will be shipped to you at:</h3>
						<p style="color:#555555; font-size: 14px; line-height: 22px; margin: 0;">
							{{ order.shipping_first_name }} {{ order.shipping_last_name }} <br>
							{{ order.shipping_street_line1}} {{ order.shipping_street_line2}} <br>
							{{ order.shipping_city }}, {{ order.shipping_state }} {{ order.shipping_zip }} <br>
							{{ order.shipping_country }} <br>
							{{ order.shipping_phone_number }} <br>
							using {{ shipping_method.name }} <br>
							{% for item in items %}
						</p>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<!-- End shipping info -->
	<!-- Begin item info -->
	<tr>
		<td>
			<table border="0"  cellpadding="0" cellspacing="0" width="640" style="font-family: helvetica, arial, sans-serif; padding: 20px;">
				<tr>
					<td align="left" style="border-bottom: 1px solid #CCCCCC; padding-bottom: 10px; vertical-align: top;">
						<h2 style="color: #E16C25; font-size: 18px; margin: 0; text-transform: uppercase;">Item Info</h2>
					</td>
				</tr>				
				<tr>
					<td align="left" style="border-bottom: 1px solid #cccccc; padding-bottom: 10px; padding-top: 10px; vertical-align: top;">
						<p style="color:# 555555; font-size: 14px; line-height: 22px; margin: 0;">
							URL: {{app.url}}{{products[item.product_id].0.url}}<br>
							SKU: {{item.sku}}<br>
							Item name: {{ item.name }}<br>
							Price: ${{ item.price|number_format(2) }}<br>
							Quantity: {{ item.quantity }}<br>
							{% endfor %}
						</p>
					</td>
				</tr>
				<tr>
					<td align="left" style="padding-top: 10px; vertical-align:top;">
						<p style="color: #555555; font-size: 14px; line-height: 22px; margin: 0;">
							We will try to get your order shipped to you as soon as possible.<br>
							Thank you for shopping with us.
						</p>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<!-- Begin item info -->
	<!-- Begin email footer -->
	<tr>
		<td>
			{% include 'core/footer.html.twig' %}
		</td>
	</tr>
	<!-- End email footer -->
</table>