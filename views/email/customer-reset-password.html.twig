<table border="0" cellpadding="0" cellspacing="0" width="640" style="font-family: helvetica, arial, sans-serif;">
	<!-- Begin email header -->
	<tr>
		<td>
			{% include 'core/header.html.twig' %}
		</td>
	</tr>
	<!-- End email header -->
	<!-- Begin title -->
	<tr>
		<td style="padding:20px 20px 10px 20px; vertical-align:top;">
			<h1 style="color: #333333; font-size: 36px; line-height: 46px; margin: 0;">
				Hello {{customer.first_name|title}},
			</h1>
		</td>
	</tr>
	<tr>
		<td style="padding:10px 20px 20px 20px; vertical-align:top;">
			<p style="font-size: 14px; line-height: 22px; color:#555555;">
				A password reset was requested. To choose a new password please follow the link below:
			</p>
			<p style="font-size: 14px; line-height: 22px;">
				<a href="{{app.url}}/account/reset-password?token={{reset_password_token}}" style="color: #E16C25;">
					{{app.url}}/account/reset-password?token={{reset_password_token}}
				</a>
			</p>
		</td>
	</tr>
	<!-- End title -->
	<!-- Begin email footer -->
	<tr>
		<td>
			{% include 'core/footer.html.twig' %}
		</td>
	</tr>
	<!-- End email footer -->
</table>